{
  "root": true,
  "parser": "@babel/eslint-parser",
  "extends": "eslint:recommended",
  "env": {
    "node": true,
    "es2021": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "camelcase": "off",
    "consistent-return": "off",
    "curly": "off",
    "linebreak-style": ["error", "unix"],
    "max-len": ["error", 120, 2]
  },
  "ignorePatterns": [ "build" ],
  "globals": {
    "Iterator": true,
    "$Keys": true
  }
}
